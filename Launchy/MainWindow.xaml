<Window x:Class="Launchy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launchy"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="MainWindow" Height="100" Width="525"        
        Opacity=".80"
        AllowsTransparency="true"
        Background="Black"
        Topmost="True">
    <Grid Margin="15,25,15,10">
        <Border BorderBrush="#FF000000" BorderThickness="1,1,1,1" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" VerticalContentAlignment="Center" Height="40px" Padding="10,0,0,0" Name="SearchBox"></TextBox>
                <TextBlock Grid.Row="1" VerticalAlignment="Center" Padding="10,0,0,0" Name="SuggestionBox" Foreground="White" ></TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
